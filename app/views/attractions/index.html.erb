<h1>Attractions</h1><br>
<table>
    <tr>
        <th>Attraction</th>
        <th>Tickets</th>
        <th>Height Requirement</th>
    </tr>
    <% if !current_user.admin %>
        <% @attractions.each do |attraction| %>
            </tr>
                <td><h4><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></h4></td>
                <td><h4><%= attraction.tickets %></h4></td>
                <td><h4><%= attraction.min_height %></h4></td>
            </tr>
        <% end %>
    <% else %>
        <% @attractions.each do |attraction| %>
            </tr>
                <td><h4><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></h4></td>
                <td><h4><%= attraction.tickets %></h4></td>
                <td><h4><%= attraction.min_height %></h4></td>
            </tr>
        <% end %>
    <% end %>
</table>
<% if current_user.admin %> 
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>